{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022", // The version of JavaScript the compiler will output
    "module": "ESNext", // The module system for the project
    "moduleResolution": "bundler", // How modules get resolved
    "rootDir": "./src", // Where your source (.ts) files are
    "outDir": "./dist", // Where the compiled (.js) files will go (good practice)
    "esModuleInterop": true, // Enables compatibility with different module types
    "forceConsistentCasingInFileNames": true, // Enforces consistent file name casing
    /* Strict Type-Checking Options */
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",
    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "types": ["node", "vitest/globals"],
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node
    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,
    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src/**/*"] // Tells TypeScript to only look for files inside the 'src' folder
}
